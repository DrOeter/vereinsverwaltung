<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <style>
            .center {
                display: flex;
                justify-content: center;
                align-items: center;
                /* height: 100vh; */
            }
            .button {
                background-color: #4CAF50; /* Green */
                border: none;
                color: white;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 4px 2px;
                cursor: pointer;
                border-radius: 25px;
            }

            .notification {
                position: fixed;
                bottom: 20px;
                right: 20px;
                background-color: #f1f1f1;
                border: 1px solid #ccc;
                border-radius: 5px;
                padding: 10px;
                z-index: 1;
            }

            .notification img {
                max-width: 500px;
                max-height: 500px;
                margin-right: 10px;
            }

            .close-button {
                position: absolute;
                top: 5px;
                right: 10px;
                color: #aaa;
                font-size: 20px;
                font-weight: bold;
                cursor: pointer;
            }
        </style>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div id="myNotification" class="notification" style="display: none;">
            <img src="http://127.0.0.1:8000/mrkrabs/mrkrabs.png" alt="Notification Image">
            <p>Success</p>
            <span class="close-button" onclick="closeNotification()">&times;</span>
        </div>
        <div class="center">
		    <button id="getMoneyButton" class="button">Get Money $$$</button>
	    </div>
        {% block body %}
        
        {% endblock %}
        <script>
            const getMoneyButton = document.getElementById("getMoneyButton");

            async function fetchData(url) {
                const response = await fetch(url);
                const data = await response.json();
                return data;
            }
            // Attach an event listener to the button
            getMoneyButton.addEventListener("click", function() {
                //
                fetchData("{{ path('app_annual_balance_get_money') }}")
                    .then(data => {
                        console.log(data);
                    })
                    .catch(error => {
                        console.error(error);
                    });


                showNotification();
            });

            function showNotification() {
                const notification = document.getElementById("myNotification");
                notification.style.display = "block";
                setTimeout(() => {
                    notification.style.display = "none";
                }, 5000); // hide the notification after 5 seconds
            }

            function closeNotification() {
                const notification = document.getElementById("myNotification");
                notification.style.display = "none";
            }
        </script>
    </body>
</html>
